[Unit]
Description=Minecraft Server

Wants=network.target
After=network.target

[Service]
User=root
Group=root
KillMode=none
SuccessExitStatus= 0 1

WorkingDirectory={{ spigot_lib }}
ExecStart=/usr/bin/java -Xms512M -Xmx1G -XX:+UseConcMarkSweepGC -jar spigot-1.12.jar

[Install]
WantedBy=multi-user.target
